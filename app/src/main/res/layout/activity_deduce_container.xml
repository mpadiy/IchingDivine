<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout
	xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView android:id="@+id/svpage" android:layout_width="fill_parent" android:layout_height="match_parent"
		android:fillViewport="false">
		<LinearLayout android:id="@+id/speed_gua" android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/ll">

				<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分     享"
                    android:id="@+id/sharebutton" />

				<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="易经今解"
                    android:id="@+id/gua_detail" />

				<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原卦注解"
                    android:id="@+id/oriDetail" />

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="变卦注解"
					android:id="@+id/furtDetail" />
			</LinearLayout>

		</LinearLayout>
	</ScrollView>

</LinearLayout>
