<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="stateSelector">@color/state_selector_light</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="accentColor">@color/accent</item>
        <item name="iconColor">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowBackground">@color/window_background</item>
        <item name="fabCircleColor">@color/fabCircleColor_light</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="listBackground">@color/list_background</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>


    <!--右上角小圆点菜单-->
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--兼容Api 21之前的版本 -->
        <item name="overlapAnchor">false</item>
    </style>

    <!--主页tabs样式-->
    <style name="main_bottom_tab">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/main_bottom_tab_font_size</item>
        <item name="android:textColor">@color/main_bottom_tab_textcolor</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/main_bottom_tab_padding_top</item>
    </style>

    <!--设置 toolbar 弹出的OptionMenu 背景颜色和字体颜色-->
    <style name="MyOptionMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/primary_text</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.GsonView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>



    <!--夜间模式 部分属性影响很多空间空间设置-->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="stateSelector">@color/state_selector_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="accentColor">@color/colorAccentDarkTheme</item>
        <item name="iconColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowBackground">@color/window_background_dark</item>
        <item name="fabCircleColor">@color/fabCircleColor_dark</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!--listBackground list 列表展示的背景色 让白色item突出-->
        <item name="listBackground">@color/list_background_dark</item>
        <item name="colorControlActivated">@color/colorPrimaryDarkTheme</item>
    </style>









    <style name="RecyclerItemViewStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
    </style>




    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="popupTheme">@style/popupTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="AppBaseTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="popupTheme">@style/popupTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="popupTheme" parent="AppBaseTheme.Dark">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>


    <style name="EditTextTheme">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




    <style name="RedTheme" parent="AppBaseTheme.Dark">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
